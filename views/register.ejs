<div class="row mt-5">
    <div class="col-md-5 m-auto">
        <h1 class="text-center mb-3"> <i class="fas fa-user-plus"></i> Register</h1>
        <form action="/users/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input 
                    type="name"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input 
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email" 
                    value=" <%= typeof name != 'undefined' ? name : '' %>"
                />

            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Create Password"
                    value="<%= typeof email != 'undefined' ? password : '' %>"
                />
            </div>
            <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input 
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder="Confirm Password"
                    value="<%= typeof email != 'undefined' ? password2: '' %>"
                />
            </div>
            <button type="submit" class="btn btn-priamry btn-block">Login</button>
        </form>
        <p class="lead mt-4">Have an account? <a href="/users/login">Login</a></p>
    </div>
</div>